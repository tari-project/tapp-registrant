{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "packageName": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "supportedChain": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "requiredPermissions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "optionalPermissions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "packageName",
    "version",
    "supportedChain",
    "requiredPermissions"
  ]
}
